{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "incremental": true
  },
  "include": ["./tests/**/*.ts", "./src/**/*.ts"]
}
